{
  "compilerOptions": {
    "target": "ES2020",
    "module": "COMMONJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
  },
  "include": [
    "src"
  ]
}
